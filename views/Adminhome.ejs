<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>softmania</title>
    <link rel="stylesheet" href="sidebar.css">
    <!-- boxicon -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <div class="sidebar">
        <div class="top">
            <div class="logo">
                
                <span>softmania</span>
                
            </div>
            <i class="bx bx-menu" id="btn"></i>
        </div>
        <div class="user">
            <img src="images/background.jpg" alt="" class="user-img">
            <div>
                <p class="bold">Maheshwari</p>
                <p>Admin</p>
            </div>
        </div>

        <ul>
            <li>
                <a href="#">
                    <i class="bx bxs-grid-alt"></i>
                    <span class="nav-item">Dashboard</span>
                </a>
                <span class="tooltip">Dashboard</span>
            </li>
            <li>
                <a href="#">
                    <i class="bx bxs-time"></i>
                    <span class="nav-item">Timesheet</span>
                </a>
                <span class="tooltip">Timesheet</span>
            </li>
            <li>
                <a href="#">
                    <i class="bx bxs-report"></i>
                    <span class="nav-item">Reports</span>
                </a>
                <span class="tooltip">Reports</span>
            </li>
            <li>
                <a href="#">
                    <i class="bx bxs-user-circle"></i>
                    <span class="nav-item">Team</span>
                </a>
                <span class="tooltip">Team</span>
            </li>
            
            <li>
                <a href="#">
                    <i class="bx bxs-log-out"></i>
                    <span class="nav-item">Logout</span>
                </a>
                <span class="tooltip">Logout</span>
            </li>
            
        </ul>
    </div>
    <div class="main-content">
        <div class="container">
            <h1>Softmania</h1>
        </div>
    </div>

    <script>
        let btn = document.querySelector('#btn')
        let sidebar = document.querySelector('.sidebar')
    
        btn.onclick = function() {
            sidebar.classList.toggle('active');
        };
    </script>
</body>
</html>