<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('includes/head') %>
    <title>Softmania-Timesheet form</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css"
    />
    <link rel="stylesheet" href="index.css">
  </head>
  <body>
    <%- include('includes/header') %>
    <!-- timesheet -->
    <main
      class="container d-flex justify-content-center align-item-cemter py-4"
    >
    <!--   -->
      <form action="/submit" method="post">
        <h1 class="pb-3">Timesheet</h1>
        <!-- names -->
        <div>
          <div class="pt-2 col-md-8 mb-3">
            <label for="name" class="form-label">Name:</label>
            <input
              type="text"
              id="name"
              name="name"
              class="form-control"
              required
            />
          </div>
        </div>
        <!-- date -->
        <div class="pt-2 col-md-8 mb-3">
          <label for="date" class="form-label">Date:</label>
          <input
            type="date"
            id="date"
            name="date"
            class="form-control"
            required
          />
        </div>

        <!-- attendance -->
        <div class="pt-2 col-12 mb-3">
          <label for="attendance" class="form-label">Attendance:</label>
          <div class="attendance-options form-check-inline">
            <input
              class="form-check-input"
              type="radio"
              id="attendance"
              name="attendance"
              value="Working"
              required
            />
            <label class="form-check-label" for="working">Working</label>
            <div class="attendance-options form-check-inline">
              <input
                class="form-check-input"
                type="radio"
                id="delay"
                name="attendance"
                value="Delay"
              />
              <label class="form-check-label" for="delay">Delay</label>
            </div>
            <div class="attendance-options form-check-inline">
              <input
                class="form-check-input"
                type="radio"
                id="leave"
                name="attendance"
                value="Leave"
              />
              <label class="form-check-label" for="leave">Leave</label>
            </div>
          </div>
          <!-- hours -->
          <div class="pt-2">
            <div class="col-md-8 mb-3">
              <label for="hours" class="form-label">Hours Worked:</label>
              <input
                type="number"
                id="hours-worked"
                name="hours"
                min="3"
                max="12"
                class="form-control"
                required
              />
            </div>
          </div>
        </div>
        <!-- description -->
        <div class="pt-2 col-12 mb-3">
          <label for="description" class="form-label">Description:</label>
          <textarea
            id="description"
            name="description"
            rows="2"
            class="form-control"
            required
          ></textarea>
        </div>
        <div class="col-12 d-flex justify-content-start">
          <button type="submit" class="mb-5 ghost" id="signUp">Submit</button>
        </div>
      </form>
      <div id="notification" class="mt-3"></div>
    </main>

    <%- include('includes/footer') %>

    <script src="script.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  </body>
</html>
