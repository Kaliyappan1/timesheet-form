<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('includes/head') %>
    <title>Form Data</title>
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css'>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <!-- sweatalert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="timesheetData.css">
  </head>
  <body>

    <%- include('includes/header') %>
    <!-- timesheet data -->
    <div class="container py-4">
        <h1>Timesheet Data</h1>
        <div class="table-responsive">
          <table class="table align-middle table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Date</th>
                    <th scope="col">Attendance</th>
                    <th scope="col">Hours</th>
                    <th scope="col">Description</th>
                    <th scope="col">Action</th>

                </tr>
            </thead>
            <tbody>
                <% x.forEach((sheet) => { %>
                <tr class="align-bottom align-middle mb-5 pb-5" id="<%= sheet._id %>">
                    <td><%= sheet.name %></td>
                    <td><%= sheet.date %></td>
                    <td><%= sheet.attendance %></td>
                    <td><%= sheet.hours %></td>
                    <td><%= sheet.description %></td>
                    <td class="align-middle delete"  >
                      <a href="/delete/:<%= sheet._id %>"><img src="images/delete.png" alt="delete" id="delete" width="25px"></a>
                    </td>
                </tr>
                <%})%>
            </tbody>
        </table>
        </div>
    </div>
    
    <!-- footer -->
       <%- include('includes/footer') %>
    
  </body>
</html>
